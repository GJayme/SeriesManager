<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sc3005054.jayme.seriesmanager">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SeriesManager">
        <activity
            android:name=".view.CadastrarUsuarioActivity"
            android:exported="false" />
        <activity
            android:name=".view.RecuperarSenhaActivity"
            android:exported="false" />
        <activity
            android:name=".view.AutenticacaoActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.details.EpisodioActivity"
            android:exported="true" />
        <activity
            android:name=".view.MainEpisodioActivity"
            android:exported="true" />
        <activity
            android:name=".view.details.TemporadaActivity"
            android:exported="true" />
        <activity
            android:name=".view.MainTemporadaActivity"
            android:exported="true" />
        <activity
            android:name=".view.details.SerieActivity"
            android:exported="true" />
        <activity
            android:name=".view.MainSerieActivity"
            android:exported="true"/>
    </application>

</manifest>